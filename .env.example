# Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/portfel_gpw
DATABASE_POOL_SIZE=10

# ============================================
# REDIS (CACHING)
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ============================================
# API KEYS - EXTERNAL SERVICES
# ============================================

# Polygon.io (Stock Market Data)
POLYGON_API_KEY=your_polygon_api_key_here
POLYGON_WS_URL=wss://socket.polygon.io/stocks
POLYGON_REST_URL=https://api.polygon.io

# X / Twitter API (Sentiment Analysis)
X_BEARER_TOKEN=your_twitter_bearer_token_here
X_API_VERSION=2

# Ortex (Short Interest Data) - Optional
ORTEX_API_KEY=your_ortex_api_key_here
ORTEX_BASE_URL=https://api.ortex.com

# ============================================
# AUTHENTICATION & SECURITY
# ============================================

# JWT Configuration
JWT_SECRET=your_very_secure_random_secret_min_32_chars
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Encryption
ENCRYPTION_KEY=your_encryption_key_32_chars_minimum

# ============================================
# APPLICATION
# ============================================

# Environment
NODE_ENV=development
# NODE_ENV=production

# Server
PORT=3000
API_BASE_URL=http://localhost:3000

# Frontend URLs
WEB_APP_URL=http://localhost:3001
MOBILE_APP_SCHEME=portfelgpw://

# ============================================
# NOTIFICATIONS
# ============================================

# Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@portfelgpw.pl

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your_expo_access_token

# ============================================
# MONITORING & LOGGING
# ============================================

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Analytics
MIXPANEL_TOKEN=your_mixpanel_token

# ============================================
# AI/ML
# ============================================

# Model Storage
MODEL_STORAGE_PATH=./ml-models/models
ONNX_MODEL_PATH=./ml-models/models/lstm_model.onnx

# Model Configuration
LSTM_PREDICTION_DAYS=14
MIN_PREDICTION_CONFIDENCE=0.5

# ============================================
# SCHEDULING
# ============================================

# Report Times (CET timezone)
MORNING_REPORT_TIME=08:00
EVENING_REPORT_TIME=16:00
TIMEZONE=Europe/Warsaw

# Data Update Intervals
SENTIMENT_UPDATE_INTERVAL=2h
PRICE_HISTORY_UPDATE_INTERVAL=1h

# ============================================
# RATE LIMITING
# ============================================

# API Rate Limits (requests per window)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Polygon.io Rate Limits (Free tier: 5 req/min)
POLYGON_RATE_LIMIT_PER_MINUTE=5

# X API Rate Limits (Basic tier: 10,000 tweets/month)
X_RATE_LIMIT_PER_MONTH=10000

# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable features
FEATURE_SENTIMENT_ANALYSIS=true
FEATURE_LSTM_PREDICTIONS=false
FEATURE_PORTFOLIO_OPTIMIZATION=false
FEATURE_AUTO_TRADING=false
FEATURE_BROKER_INTEGRATION=false

# Premium Features
PREMIUM_FEATURES_ENABLED=false

# ============================================
# AWS / CLOUD (PRODUCTION)
# ============================================

# AWS Configuration
AWS_REGION=eu-central-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=portfel-gpw-storage

# ============================================
# DEVELOPMENT
# ============================================

# Debug
DEBUG=true
LOG_LEVEL=debug
# LOG_LEVEL=info (production)

# Mock Data (for testing without API keys)
USE_MOCK_DATA=true
MOCK_PORTFOLIO_SIZE=5

# ============================================
# TESTING
# ============================================

# Test Database
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/portfel_gpw_test

# Test API Keys (if different from production)
TEST_POLYGON_API_KEY=
TEST_X_BEARER_TOKEN=
